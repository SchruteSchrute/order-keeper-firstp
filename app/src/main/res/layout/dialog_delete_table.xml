<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="120dp"
    android:background="@drawable/ic_dialog_background">
    <TextView
        android:text="Удалить заказ?"
        android:fontFamily="@font/notosans_bold"
        android:textColor="@color/yy_text_or_background"
        android:textSize="13dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="Тестовый текст"
        android:textColor="@color/yy_text_dark"
        android:id="@+id/tvDelTabName"
        android:fontFamily="@font/notosans_regular"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/yy_table_item_background_light"
        android:paddingTop="1.2dp"
        android:paddingBottom="2dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="ОК"
        android:textSize="12dp"
        android:id="@+id/btnOK"
        android:fontFamily="@font/notosans_bold"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_dialog_btn_ok"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"/>

    <Button
        android:text="Отмена"
        android:textSize="12dp"
        android:id="@+id/btnCancel"
        android:textAllCaps="false"
        android:fontFamily="@font/notosans_bold"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_dialog_btn_dismiss"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>